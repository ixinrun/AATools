<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/file_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/file_folder_ic" />

    <TextView
        android:id="@+id/folder_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/file_icon_iv"
        android:textColor="@color/text_color_medium"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:text="xxxxxx" />

    <TextView
        android:id="@+id/folder_path_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/folder_name_tv"
        android:layout_alignLeft="@id/folder_name_tv"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_color_medium"
        android:textSize="12dp"
        tools:text="xxxxx/xxxx/xxxxxx.jpg" />

</RelativeLayout>